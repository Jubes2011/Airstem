<Page
    x:Class="Musicus.ImportRefreshPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Musicus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="Black">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/PcAppIcon/Bg.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
        </Grid>

        <Border x:Name="ColorGrid" Opacity=".7" Background="Black"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="Heading" FontSize="25" FontWeight="Bold" Margin="10" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PrimaryTextStyle}"/>
            <TextBlock x:Name="Message" Margin="10" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource SecondaryTextStyleMobile}"/>
            <ProgressBar x:Name="Bar" Visibility="Collapsed" Foreground="White" IsEnabled="True" Width="130" Background="{StaticResource SystemControlDisabledBaseLowBrush}" Margin="10"/>
        </StackPanel>
      
    </Grid>
    
   
</Page>
