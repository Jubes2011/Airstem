                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                                <AppBarButton x:Name='AudioTracksSelectionButton' Icon='Character' Style='{StaticResource AppBarButtonStyle}' MediaTransportControlsHelper.DropoutOrder='5' Visibility='Collapsed'/>
                                                <AppBarButton x:Name='PlayPauseButton' Style='{StaticResource AppBarButtonStyle}' MediaTransportControlsHelper.DropoutOrder='11'>
