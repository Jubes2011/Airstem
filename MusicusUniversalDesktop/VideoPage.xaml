                                                            </StackPanel>
                                                        </Flyout>
                                                    </AppBarButton.Flyout>
                                                    <AppBarButton.Icon>
                                                        <SymbolIcon x:Name='VolumeMuteSymbol' Symbol='Volume' />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                                <AppBarButton x:Name='FullWindowButton' Style='{StaticResource AppBarButtonStyle}' MediaTransportControlsHelper.DropoutOrder='8'>
                                                    <AppBarButton.Icon>
